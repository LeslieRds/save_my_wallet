<div class="user-game-cards">
  <h1>Add a challenge?</h1>
  <%# add c controller stimulus to listen click and update the strong params %>
  <div class="user-game-card" data-controller="challenge">
    <h2><% @challenges.each do |challenge| %></h2>
      <button class="button-game" data-challenge-target="idChallenge" data-challenge-id=<%= challenge.id %>> <%= challenge.title %> </button>
    <% end %>
  </div>
</div>

<%= link_to "Back to challenges", user_game_index_path %>
