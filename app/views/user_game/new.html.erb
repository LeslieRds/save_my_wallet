<div class="container">
  <h1>Add a challenge?</h1>
  <%# add c controller stimulus to listen click and update the strong params %>
  <div data-controller="challenge">
    <h2><% @challenges.each do |challenge| %></h2>
      <button  data-challenge-target="idChallenge" data-challenge-id=<%= challenge.id %>> <%= challenge.title %> </button>
    <% end %>
</div>
