<div class="cards-challenges">
  <h1> Challenges </h1>
  <div class="card-challenges">
    <p> "Hello, <%= current_user.nickname%>! Which challenge do you want to try?" </p>
    <h2><% @challenges.each do |challenge| %></h2>
        <br>
          <h2> <%= link_to challenge.title, challenge_path(challenge) %> </h2>
          <p><i class="fa-solid fa-arrow-trend-up"></i> <%= challenge.level %> </p>
      <% end %>
  </div>
</div>
<%= button_to "Sign out", destroy_user_session_path, method: :delete %>
